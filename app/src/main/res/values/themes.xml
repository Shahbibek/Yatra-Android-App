<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Yatra" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Yatra.Starting" parent="Theme.SplashScreen">
        <!-- The background color-->
        <item name="windowSplashScreenBackground">@color/white</item>
        <!-- The logo-->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_yatra_logo_3__180x180_</item>
        <!-- The Duration-->
        <item name="windowSplashScreenAnimationDuration">500</item>
        <!-- The original theme after splash screen ends-->
        <item name="postSplashScreenTheme">@style/Theme.Yatra</item>
    </style>

</resources>