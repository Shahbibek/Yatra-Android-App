<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Yatra" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Yatra.Starting" parent="Theme.SplashScreen">
        <!-- The background color-->
        <item name="windowSplashScreenBackground">@color/purple_500</item>
        <!-- The logo-->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_logo_yatra</item>
        <!-- The Duration-->
        <item name="windowSplashScreenAnimationDuration">500</item>
        <!-- The original theme after splash screen ends-->
        <item name="postSplashScreenTheme">@style/Theme.Yatra</item>
    </style>
    <style name="__p__sign_in">
        <item name="android:fontFamily">averdana</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/__p__sign_in_color</item>
        <item name="android:layout_marginStart">122dp</item>
        <item name="android:layout_marginTop">93dp</item>
        <item name="android:layout_width">162dp</item>
        <item name="android:layout_height">44dp</item>
    </style>
</resources>